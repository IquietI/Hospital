@model Hospital.Modules.SalaryDetails.Model.SalaryDetail

@{
    ViewData["Title"] = "Salary details";
}

<h2>Enter salary details</h2>

@*<h4>SalaryDetail</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NIC" class="control-label"></label>
                <input asp-for="NIC" placeholder="Enter NIC number" class="form-control" />
                <span asp-validation-for="NIC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingHrs" class="control-label"></label>
                <input asp-for="WorkingHrs" placeholder="Enter Hours or Days" class="form-control" />
                <span asp-validation-for="WorkingHrs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" placeholder="Enter Salary rate" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
